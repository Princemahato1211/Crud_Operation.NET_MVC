@model IEnumerable<Employee>;

@{
    ViewData["Title"] = "List of actors";
}

<div class="container">
    <div class="row">
        <div class="col-lg-8 offset-2">
            <table border="1" class="table">
                <thead>
                    <tr>
                        <th style="padding:10px">@Html.DisplayNameFor(Model => Model.emp_name)</th>
                        <th style="padding:10px">@Html.DisplayNameFor(Model => Model.state)</th>
                        <th style="padding:10px">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td class="align-middle" style="padding:10px">
                                @Html.DisplayFor(modelItem => item.emp_name)
                            </td>
                            <td class="align-middle" style="padding:10px">
                                @Html.DisplayFor(modelItem => item.state)
                            </td>
                            <td class="align-middle" style="padding:10px">
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.emp_id"><i class="bi bi-pencil-square"></i>Update</a>
                                <a class="btn btn-outline-info " asp-action="Details" asp-route-id="@item.emp_id"><i class="bi bi-eye"></i>Details</a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.emp_id"><i class="bi bi-trash"></i>Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div style="position:fixed; right:25px; bottom:70px;" class="col-md-12 text-white">
                <a asp-controller="Employee" asp-action="Create" class="btn btn-success float-end">
                    <i class="bi bi-plus-circle"> Add New Employee</i>
                </a>
            </div>
        </div>
    </div>
</div>

