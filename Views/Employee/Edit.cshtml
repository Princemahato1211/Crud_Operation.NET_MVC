 @model Employee

@{
    ViewData["Title"] = "Update Employee";
}

@*write  the code*@

<div class="container">
    <div class="row">
        <div class="col-lg-8 offset-2">
            <h2>Update Employee</h2>
            <div class="row">
                <div class="col-md-8 offset-2">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="emp_id" class="control-label"></label>
                            <input asp-for="emp_id" class="form-control " readonly />
                        </div>
                        <div class="form-group">
                            <label asp-for="emp_name" class="control-label"></label>
                            <input asp-for="emp_name" class="form-control" />
                            <span asp-validation-for="emp_name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="state" class="control-label"></label>
                            <input asp-for="state" class="form-control" />
                            <span asp-validation-for="state" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="padding:15px">
                            <input type="submit" value="Update" class="btn btn-success float-end" />
                            <a class="btn btn-outline-secondary" asp-controller="Employee" asp-action="Index">Show all</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>