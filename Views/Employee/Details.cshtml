@model Employee

@{
    ViewData["Title"] = "Add new Employee";
}

@*write  the code*@

<div class="container">
    <div class="row">
        <div class="col-lg-8 offset-2">
            <h2>Details of employee @Model.emp_id</h2>
            <div class="row">
                <div class="col-md-8 offset-2">
                    <div class="form-group">
                        <label asp-for="emp_name" class="control-label"></label>
                        <input asp-for="emp_name" class="form-control" readonly/>
                        <span asp-validation-for="emp_name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="state" class="control-label"></label>
                        <input asp-for="state" class="form-control" readonly />
                        <span asp-validation-for="state" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding:15px">
                        <a class="btn btn-outline-success float-end" asp-action="Edit" asp-route-id="@Model.emp_id">Edit</a>
                        <a class="btn btn-outline-secondary" asp-controller="Employee" asp-action="Index">Show all</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
